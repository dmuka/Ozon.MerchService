{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Grpc": "Debug"
    }
  },
  "AllowedHosts": "*",
  "DBConnectionOptions": {
    "ConnectionString": "Host=localhost;Port=5425;Database=merch;Username=postgres;Password=merch_password"
  },
  "KafkaConfiguration": {
    "BootstrapServers": "localhost:9092",
