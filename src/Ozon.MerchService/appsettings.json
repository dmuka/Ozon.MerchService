    "StockReplenishedEventTopic": "stock_replenished_event",
    "EmployeeNotificationEventTopic": "employee_notification_event",
    "EnableAutoCommit": "false"
  },
  "StockGrpcServiceConfiguration": {
    "ServerAddress" : "http://localhost:5072"
  },
  "Jaeger": {
    "Host": "localhost",
    "Port": 6831
  },
  "Serilog": {
    "Config": "serilog.json"
  }
}
